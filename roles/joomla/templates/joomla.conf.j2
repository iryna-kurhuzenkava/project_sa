server {
    listen 80;
    listen [::]:80;
    server_name  joomla.site www.joomla.site;
    root /var/www/html/joomla.site;
    index index.html index.htm index.php;

    access_log /var/log/nginx/joomla.site_access_log;
    error_log /var/log/nginx/joomla.site_error_log;

    
    location ~* ^.+\.(jpg|jpeg|gif|png|css|zip|tgz|gz|rar|bz2|doc|docx|xls|xlsx|exe|pdf|ppt|tar|wav|bmp|rtf|js)$ {
            expires modified +1w;
    }
}





